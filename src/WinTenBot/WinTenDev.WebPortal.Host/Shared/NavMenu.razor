<MatAccordion Multi="true">
    <MatExpansionPanel>
        <MatExpansionPanelSummary>
            <MatExpansionPanelHeader>Beranda</MatExpansionPanelHeader>
        </MatExpansionPanelSummary>
        <MatExpansionPanelDetails>
            <p>Statistik</p>
        </MatExpansionPanelDetails>
    </MatExpansionPanel>
    <MatExpansionPanel>
        <MatExpansionPanelSummary>
            <MatExpansionPanelHeader>Kelola</MatExpansionPanelHeader>
        </MatExpansionPanelSummary>
        <MatExpansionPanelDetails>
            <MatList>
                <MatListItem Href="word-filter/list">Olah Kata</MatListItem>
            </MatList>
            <p>Olah Tags</p>
            <p>Olah Catatan</p>
        </MatExpansionPanelDetails>
    </MatExpansionPanel>
    <MatExpansionPanel>
        <MatExpansionPanelSummary>
            <MatExpansionPanelHeader>Labs</MatExpansionPanelHeader>
        </MatExpansionPanelSummary>
        <MatExpansionPanelDetails>
            <MatList>
                <MatListItem Href="counter">Counter</MatListItem>
                <MatListItem Href="fetchdata">Fetch Data</MatListItem>
            </MatList>
            <p>Olah Catatan</p>
        </MatExpansionPanelDetails>
    </MatExpansionPanel>

    @for (var i = 0; i < 5; i++)
    {
        var ii = i; // capture variable
        <MatExpansionPanel>
            <MatExpansionPanelSummary>
                <MatExpansionPanelHeader>Panel @ii</MatExpansionPanelHeader>
            </MatExpansionPanelSummary>
            <MatExpansionPanelDetails>
                <p>Content of panel @ii</p>
            </MatExpansionPanelDetails>
        </MatExpansionPanel>
    }
</MatAccordion>


